<% if !current_user %>
	<%= link_to_remote "Login", :url => { :controller => 'users', :action => 'sign_in' }, :update => "content", :title => "Login", :script => false, :method => :get %> / 
<%= link_to_remote "Sign Up", :url => { :controller => 'users', :action => 'sign_up' }, :update => "content", :title => "Sign Up", :script => false, :method => :get %>
<% else %>
	<%= link_to "Logout", :controller => 'users', :action => 'sign_out' %>
<% end %>