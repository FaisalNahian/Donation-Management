<div id="my_account">
	<h2>My Account Settings</h2>

	<h3>Profile:</h3>
	<% form_for @user, :user, :url => users_path(@user), :html => { :method => :put } do |f| -%>
	  <%= f.error_messages %>

	  <p>First Name: <%= f.text_field :firstname %></p>
	  <p>Last Name: <%= f.text_field :lastname %></p>
	  <p>Email Address: <%= f.text_field :email %></p>
	  <p>New Password: <%= f.password_field :password %></p>
	  <p>Re-enter Password: <%= f.password_field :password_confirmation %></p>

	  <p><%= f.submit "Save" %></p>
	<% end -%>
</div>