<% form_for :user, :url => users_path do |f| -%>
	First Name <%= f.text_field :firstname %>
	Last Name <%= f.text_field :lastname %>
	Email <%= f.text_field :email %>
	Password <%= f.password_field :password %>
	Password Confirmation <%= password_field :user, :password_confirmation %>
	URL Slug <%= f.text_field :url_slug %>
	Gender <%= f.text_field :gender %>
	<label for="birthdate">Birthdate</label> <%= f.text_field :birthdate %>
	Country <%= f.text_field :country_id %>
	Province <%= f.text_field :province %>
	<%= submit_to_remote 'signup', 'Sign Up', :url => { :controller => 'users', :action => 'create' }, :update => 'content' %>
 
<% end %>