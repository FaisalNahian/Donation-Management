<div id="signup">
	<div id="register_header">Join Us <span id="register">| Already registered? <%= link_to "Sign In", new_user_session_path %>.</span><br/>
		Make a difference today.</div>
	
	<% form_for @user, :user, users_path(@user) do |f| -%>
	  <%= f.error_messages %>

		First Name: <%= f.text_field :firstname %><br/>
		Last Name: <%= f.text_field :lastname %><br/>
		Email Address: <%= f.text_field :email %><br/>
	  	Password: <%= f.label :password %> <%= f.password_field :password %><br/>
	  	Re-enter Password: <%= f.password_field :password_confirmation %><br/>

